[package]
name = "syncgit"
version = "0.1.7"
edition = "2021"
authors = ["Rickypcyt <rickypcyt@gmail.com>"]
description = "Una herramienta CLI para sincronizar repositorios Git"
readme = "README.md"
license = "MIT"
exclude = ["target/*"]

[dependencies]
# TUI deps for responsive UI
crossterm = "0.27"

[profile.release]
opt-level = 3
lto = true
codegen-units = 1
strip = true
